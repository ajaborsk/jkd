<?xml version = "1.0"  encoding="UTF-8" standalone="yes"?>
<application name="demo_pi">
  <nodes>
    <!-- <serial_capture name="serial1" serial_port="/dev/ttyUSB0" serial_baudrate="57600" /> -->
    <serial_line_process name="serial_parser">
      <links>
    <!--    <link node="serial1" port="output" input="input" /> -->
      </links>
    </serial_line_process>
    <history name="esp01_128_histo" timestamp="true"></history>
    <history name="jee_histo">
      <links>
        <link input="input" connect="auto" policy="on_update" node="serial_parser" port="output" />
      </links>
    </history>
    <!-- model data: capacities, resistors values, gains, offsets, etc. -->
    <data_object name="model" persistent="true"/>
    <!-- Data preparation: from raw data (bunch of ints) to scaled & qualified (temperatures, currents, voltages...) -->
    <data_process_1 name="data_process_1_0">
      <links>
        <link input="model" node="model" port="data" />
        <link input="input" node="jee_histo" port="output" />
      </links>
    </data_process_1>
    <!-- Display configuration (colors, scales, etc.) -->
    <data_object name="config" persistent="true"/>
    <!-- Display preparation: from raw data to Chart.js data object -->
    <data_process_0 name="data_process_0_0">
      <links>
        <link input="config" node="config" port="data" />
        <link input="input" node="data_process_1_0" port="output" />
      </links>
    </data_process_0>
    <subprocessus name="heavyproc" appname="unused_app_name">
      <nodes>
        <signal_generator name="siggen_ext" />
        <!-- This is a comment -->
      </nodes>
    </subprocessus>
    <html_page appname="demo_pi" name="homepage" template="homepage" title="A jkd Demo Application">
      <histo data="/data_process_0_0/output" template="dummy" />
      <chart data="/heavyproc/siggen_ext/output" template="table" />
    </html_page>
  </nodes>
  <ports>
    <port name="index.html" node="homepage" port="html" />
  </ports>
</application>
